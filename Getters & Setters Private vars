		                  return rollNo;
                      	}
          public void setRollNo(int rollNo) {
		               this.rollNo = rollNo;
	                              }
	        public String getName() {
  
		                return name;
    
	                             }
  
       	public void setName(String name) {
  
	              	this.name = name;
	                 }
       public int getMarks() {
		
		                 return marks;
                     }
           public void setMarks(){
                    if(marks>=0 && marks<=100)
                         this.marks=marks;
                     else 
                          throw new illegalArgumentException();
  
          
       }
       
